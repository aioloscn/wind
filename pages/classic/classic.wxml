<view class="container">
    <view class="header">
        <w-episode class="episode" index="{{classicData.index}}" />
        <w-like class="like" bind:like="onLike" like="{{classicData.like_status}}" count="{{classicData.fav_nums}}" />
    </view>
    <w-movie img="{{classicData.image}}" content="{{classicData.content}}" />
    <w-navi class="navi" bind:left="onNext" bind:right="onPrevious" title="{{classicData.title}}" first="{{first}}" latest="{{latest}}" />
</view>